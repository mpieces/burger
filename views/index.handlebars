<h1>Burgers To Pick </h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center">
                <ul>
                    {{#each burger_data}}

                    {{#unless this.devoured}}
                    <li>
                        <p>{{this.id}}.{{this.burger_name}} </p>
                        <form class="devour-form">
                            <input type="hidden" class="burger_id" value={{this.id}}>
                            <button type="submit" class="devour">Devour This!</button>
                        </form>
                        

                    </li>
                    
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
               <div class="col-md-6 text-center">
                <ul>
                    {{#each burger_data}}

                    {{#if this.devoured}}
                    <li>
                        <p>{{this.id}}.{{this.burger_name}} </p>

                    </li>
                    
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>


